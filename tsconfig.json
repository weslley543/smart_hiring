{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/tests/": ["../tests/"],
        "@/": [""]
      }
    },
    "include": ["src", "db", "tests"],
    "exclude": ["node_modules/**", "dist", "tmp"]
  }
